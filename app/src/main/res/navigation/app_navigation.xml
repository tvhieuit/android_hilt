<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/app_navigation"
    app:startDestination="@id/splashActivity">

    <activity
        android:id="@+id/splashActivity"
        android:name="com.study.presentation.splash.SplashActivity"
        android:label="activity_splash"
        tools:layout="@layout/activity_splash" >
        <action
            android:id="@+id/action_splashActivity_to_loginActivity"
            app:destination="@id/loginActivity" />
    </activity>

    <activity
        android:id="@+id/loginActivity"
        android:name="com.study.presentation.login.LoginActivity"
        android:label="activity_login"
        tools:layout="@layout/activity_login" />


</navigation>